= simple_form_for(@place) do |f|
  = f.error_notification

  .form-inputs
    = f.input :name
    = f.input :email
    = f.input :website
    = f.input :phone
    = f.input :address
    = f.input :latitude
    = f.input :longitude
    = f.input :city
    = f.input :type
    = f.input :reference

  .form-actions
    = f.button :submit
