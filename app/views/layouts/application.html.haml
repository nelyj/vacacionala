!!!
%html
  %head
    %title Vacacionar.cl - Encuentra ofertas y planifica tu proximas vacaciones
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-default.navbar-fixed-top{:role => "navigation"}
      .container-fluid
        .navbar-header
          %button.navbar-toggle{"data-target" => "", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle Navagitaion
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          = link_to "Vacacionar", root_path, class: "navbar-brand"
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-right
            - if current_user
              %li
                = link_to new_place_path do
                  %i.glyphicon.glyphicon-plus
              %li.dropdown
                %a{"data-toggle" => "dropdown", :href => "#"}
                  = image_tag current_user, width: 25, height: 25
                  %span.caret
                %ul.dropdown-menu{"aria-labelledby" => "dLabel1", :role => "menu"}
                  %li= link_to "Sign out", destroy_user_session_path, method: :delete
            - else
              %li= link_to 'Registrarse', new_user_registration_path
              %li= link_to 'Iniciar sesion', new_user_session_path
    %p.notice= notice
    %p.alert= alert
    .container-fluid.fill
      = yield
